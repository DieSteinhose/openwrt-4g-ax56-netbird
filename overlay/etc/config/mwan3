config interface 'wan'
        option enabled '1'
        option family 'ipv4'
        option interval '5'
        option down '3'
        option up '2'
        list track_ip '9.9.9.9'
        list track_ip '1.1.1.1'
        option timeout '2'
        option metric '10'
        option weight '1'

config interface 'lte'
        option enabled '1'
        option family 'ipv4'
        option interval '5'
        option down '3'
        option up '2'
        list track_ip '1.1.1.1'
        list track_ip '9.9.9.9'
        option timeout '2'
        option metric '20'
        option weight '1'

config member 'wan_m'
        option interface 'wan'
        option metric '10'
        option weight '1'

config member 'lte_m'
        option interface 'lte'
        option metric '20'
        option weight '1'

config policy 'prefer_wan'
        list use_member 'wan_m'
        list use_member 'lte_m'

config rule 'default_rule'
        option dest_ip '0.0.0.0/0'
        option use_policy 'prefer_wan'
